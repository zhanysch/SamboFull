<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorWhiteSecond"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/corner"
        android:background="@drawable/recycler_corn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageCourse"
        app:layout_constraintTop_toTopOf="@id/corner"
        app:layout_constraintBottom_toBottomOf="@id/corner"
        app:layout_constraintEnd_toEndOf="@id/corner"
        app:layout_constraintStart_toStartOf="@id/corner"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="220dp"
        android:background="@drawable/recycler_corn"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/textCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/corner"
        app:layout_constraintStart_toEndOf="@id/imageCourse"
        app:layout_constraintBottom_toTopOf="@id/Material"
        app:layout_constraintEnd_toEndOf="@id/corner"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="21dp"
        android:textColor="@color/dark"
        android:textSize="16sp"
        android:fontFamily="@font/gilroy_semibold"
        android:text="Haloo Walter gdfgfgdfgd "/>

    <TextView
        android:id="@+id/Material"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/imageCourse"
        app:layout_constraintTop_toBottomOf="@id/textCourse"
        app:layout_constraintStart_toEndOf="@id/imageCourse"
        android:layout_marginStart="12dp"

        android:layout_marginTop="6dp"
        android:text="gdsgdsgsdgsd"
        android:textSize="14sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>